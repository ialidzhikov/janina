<h1><%= @solutions.first.task.name %> &mdash; Solutions</h1>
<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td>Name</td>
        <td>Points</td>
      </tr>
    </thead>
    <tbody>
      <% @solutions.each do |solution| %>
      <tr>
        <td>
          <a style="display: block;" href="#"><%= solution.user.full_name %></a>
        </td>
        <td>
          <span><%= solution.points %></span>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
