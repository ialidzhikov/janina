<h1><%= @task.name %> &mdash; Solutions</h1>
<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td>Name</td>
        <td class="text-center">Points (Max. Possible - <%= @task.max_points %>)</td>
      </tr>
    </thead>
    <tbody>
      <% @task.solutions.each do |solution| %>
      <tr>
        <td>
          <a style="display: block;"
             href="/tasks/<%= @task.id %>/solutions/<%= solution.id %>">
            <%= solution.user.full_name %>
          </a>
        </td>
        <td class="text-center">
          <span><%= solution.points %></span>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
