<h1>Leaderboard</h1>
<div class="col-lg-8 leaderboard">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-center">#</th>
        <th class="photo"></th>
        <th>Name</th>
        <th class="text-center">Points</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td class="text-center">1</td>
        <td>
          <img class="media-object img-rounded" width="30px" height="30px"
               src="<%= user.photo.url %>">
        </td>
        <td>
          <a href="#"><%= user.full_name %></a>
        </td>
        <td class="text-center"><%= user.points %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
