<h1>Leaderboard</h1>
<div class="col-lg-8 leaderboard">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="text-center">#</th>
        <th class="photo"></th>
        <th>Name</th>
        <th class="text-center">Points</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each.with_index(1) do |record, i| %>
      <tr>
        <td class="text-center"><%= i %></td>
        <td>
          <img class="media-object img-rounded" width="30px" height="30px"
               src="<%= record.photo_url %>">
        </td>
        <td>
          <a href="#"><%= record.full_name %></a>
        </td>
        <td class="text-center"><%= record.total_points %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
