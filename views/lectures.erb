<h1>Lectures</h1>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <td class="text-center">#</td>
          <td>Lecture</td>
          <td>Date</td>
          <% if @admin %>
          <td>Actions</td>
          <% end %>
        </tr>
      </thead>
      <% if @admin %>
      <tfoot>
        <tr>
          <td colspan="4">
            <a class="btn btn-sm btn-primary pull-right" href="/lecture/add">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
            </a>
          </td>
        </tr>
      </tfoot>
      <% end %>
      <tbody>
        <% @lectures.each do |lecture| %>
        <tr>
          <td class="text-center"><%= lecture.id %></td>
          <td>
            <a href="<%= lecture.content.url %>"><%= lecture.name %></a>
          </td>
          <td><%= lecture.date %></td>
          <% if @admin %>
          <td>
            <a class="btn btn-default btn-xs" href="/lectures/<%= lecture.id %>/edit">
              <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <button class="btn btn-danger btn-xs" data-toggle="modal" data-target="#deleteModal"
                    data-name="<%= lecture.name %>" data-id="<%= lecture.id %>">
              <span class="glyphicon glyphicon-remove"></span>
            </button>
          </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<!-- Delete lecture modal -->
<% if @admin %>
<div class="modal fade" id="deleteModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title lecture-name"></h4>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete lecture with name
          "<span class="lecture-name"></span>"?
        </p>
      </div>
      <div class="modal-footer">
        <form id="confirm-form" method="post">
          <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-primary">Yes</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/js/lecture-delete.js"></script>
<% end %>
