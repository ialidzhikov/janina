<h1>Add Task</h1>
<div class="row">
  <div class="col-lg-8">
    <div class="well bs-component">
      <form class="form-horizontal" method="post" action="/tasks" enctype="multipart/form-data"  accept-charset="UTF-8">
        <div class="form-group">
          <label for="input-name" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" id="input-name" name="name" placeholder="Name">
          </div>
        </div>
        <div class="form-group">
          <label for="input-content" class="col-lg-2 control-label">Description</label>
          <div class="col-lg-6" style="margin-top: 10px;">
            <input type="file" id="input-content" name="description">
          </div>
        </div>
        <div class="form-group">
          <label for="input-deadline" class="col-lg-2 control-label">Deadline</label>
          <div class="col-lg-6">
            <input type="datetime-local" class="form-control"
                   id="input-deadline" name="deadline">
          </div>
        </div>
        <div class="form-group">
          <label for="input-max-points" class="col-lg-2 control-label">Points</label>
          <div class="col-lg-3">
            <input type="number" min="1" class="form-control"
                   id="input-max-points" name="max_points">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <a href="/tasks" class="btn btn-default">Cancel</a>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

