<h1>Edit Task</h1>
<div class="row">
  <div class="col-lg-8">
    <div class="well bs-component">
      <form class="form-horizontal" method="post" action="/tasks/<%= @task.id %>"
            enctype="multipart/form-data">
        <input type="hidden" name="_method" value="put">
        <div class="form-group">
          <label for="input-name" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" id="input-name" name="name"
                   value="<%= @task.name %>" placeholder="Name">
          </div>
        </div>
        <div class="form-group">
          <label for="input-description" class="col-lg-2 control-label">Description</label>
          <div class="col-lg-6" style="margin-top: 10px;">
            <input type="file" id="input-description" name="description">
          </div>
        </div>
        <div class="form-group">
          <label for="input-deadline" class="col-lg-2 control-label">Deadline</label>
          <div class="col-lg-6">
            <input type="datetime-local" class="form-control" id="input-deadline" name="deadline"
                   value="<%= @task.deadline.strftime('%FT%R') %>">
          </div>
        </div>
        <div class="form-group">
          <label for="input-max-points" class="col-lg-2 control-label">Points</label>
          <div class="col-lg-3">
            <input type="number" min="1" class="form-control"
                   id="input-max-points" name="max_points"
                   value="<%= @task.max_points %>">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <a href="/tasks" class="btn btn-default">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
